<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/add_item_screen"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <ScrollView android:id="@+id/field_scroll"
    	android:layout_weight="1.0" 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent">
        <LinearLayout android:id="@+id/field_container"
        	android:orientation="vertical"
       		android:layout_width="match_parent" 
       		android:layout_height="wrap_content">
       		<LinearLayout android:id="@+id/name_field_container"
       			android:layout_width="match_parent"
       			android:layout_height="wrap_content">
       			<TextView android:text="@string/name_field" 
       				android:layout_weight="0.1"
       				android:layout_gravity="left|center_vertical"
       				android:textStyle="bold"
       				android:layout_width="wrap_content" 
       				android:layout_height="wrap_content"/>
      			<EditText android:id="@+id/name_field"
      				android:layout_weight="0.9"
      				android:layout_width="wrap_content"
      				android:layout_height="wrap_content"/>
      		</LinearLayout>
     	</LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	<Button android:id="@+id/add_field_button"
    		android:layout_weight="0.5"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/add_field_button" />
   		<Button android:id="@+id/done_button"
   			android:layout_weight="0.5"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="@string/done_button" />
	</LinearLayout>
    
</LinearLayout>
